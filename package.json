{
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --x64 && electron-builder build --mac",
    "build:win": "electron-builder build --win --x64"
  },
  "main": "./src/main.js",
  "name": "instagramclassic",
  "version": "1.0.0",
  "build": {
    "productName": "InstagramClassic",
    "appId": "com.pribess.InstagramClassic",
    "asar": true,
    "protocols": {
      "name": "Instagram",
      "schemes": [
        "Instagram"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip"
        }
      ],
      "icon": "./res/icon.png"
    },
    "dmg": {
      "title": "projectname",
      "icon": "./res/icon.png"
    },
    "win": {
      "target": ["zip", "portable", "nsis"],
      "icon": "./res/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "shortcutName": "InstagramClassic"
    }
  },
  "devDependencies": {
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "instagram-web-api": "^2.2.2"
  }
}
